<div class="container">
   <div class="row">

      <div class="col-md-4 mx-auto">
         <form action="<%= create_account_path()%>" method="POST">
            <div class="form-group">
                <label for="">Full Name</label>
                <input type="text" class="form-control" name="user[name]" placeholder="Enter full name" required="true">
            </div>
            <div class="form-group">
                <label for="">Email address</label>
                <input type="email" class="form-control" placeholder="Enter email" required="true" name="user[email]">
            </div>
            <div class="form-group">
                <label for="">Password</label>
                <input type="password" class="form-control" placeholder="********" required="true" name="user[password]">
                <small id="passwordHelp" class="form-text text-muted">password must be 8 char long</small>
            </div>
            <div class="form-group">
                <label for="">Confirm password</label>
                <input type="password" class="form-control" placeholder="********" required="true" name="user[password_confirmation]">
                <small id="passwordHelp" class="form-text text-muted">Retype password</small>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
         </form>   
      </div>
      
   </div>
</div>